{
    "name": "syahril/tailwindcss",
    "description": "A Tailwind CSS package for PHP projects",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Syahril A P",
            "email": "callmesyahril@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/cache": "^5.4",
        "symfony/console": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "sempro/phpunit-pretty-print": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Syahril\\TailwindCss\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Syahril\\TailwindCss\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --printer 'Sempro\\PHPUnitPrettyPrinter\\PrettyPrinterForPhpUnit9'",
        "test:coverage": "phpunit --coverage-text --colors=never"
    },
    "config": {
        "bin-dir": "bin"
    }
}
